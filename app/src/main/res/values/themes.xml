    <style name="AppTheme.Black.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="AppTheme.Black.AppWidgetContainer" parent="AppTheme.Black.AppWidgetContainerParent" />

</resources>